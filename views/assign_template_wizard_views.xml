<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_assign_template_wizard_form" model="ir.ui.view">
        <field name="name">assign.template.wizard.form</field>
        <field name="model">assign.template.wizard</field>
        <field name="arch" type="xml">
            <form string="Asignar Plantilla">
                <group>
                    <field name="template_id"/>
                </group>
                <footer>
                    <button string="Asignar" 
                            name="action_assign_template" 
                            type="object" 
                            class="btn-primary"/>
                    <button string="Cancelar" 
                            class="btn-secondary" 
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>